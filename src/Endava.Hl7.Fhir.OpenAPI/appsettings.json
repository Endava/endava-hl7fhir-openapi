    "GitHub": "https://github.com/matjazbravc",
    "LinkedIn": "https://www.linkedin.com/in/matjazbravc/"
  },
  "FhirOptions": {
    "Endpoint": "https://hapi.fhir.org/baseR4",
    "ManagingOrganization": "https://hapi.fhir.org/baseR4/Organization/1849663",
    "BearerToken": ""
  },
  "ResourcesOptions": {
    "CitizenshipCsvFilename": "Resources\\Files\\CitizenshipList.csv"
  },
  "SwaggerConfig": {
    "Title": "HL7 FHIR R4 OpenAPI",
    "Description": "OpenAPI demo for custom EHR integration with FHIR server.<br>**NOTE: NOT ALL RESOURCES HAVE BEEN IMPLEMENTED!",
    "ContactName": "Endava Healthtech",
    "ContactEmail": "info.london@endava.com",
    "ContactUrl": "https://www.endava.com/en/Industries/Healthtech",
    "LicenseName": "Licenced under Apache 2.0 license",
    "LicenseUrl": "https://opensource.org/licenses/Apache-2.0",
    "DocsFile": "docs.json",
    "RoutePrefix": "swagger"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Filter": [
      {
        "Name": "ByExcluding",
        "Args": {
          "expression": "StartsWith(SourceContext, 'Microsoft')"
        }
      }
    ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} [{Level:u3}] [{SourceContext}] {Message}{NewLine}{Exception}",
          "restrictedToMinimumLevel": "Verbose"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "./Log/AppLog.txt",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} [{Level:u3}] {Message}{NewLine}{Exception}",
          "fileSizeLimitBytes": 1073741824, // 1Gb
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "restrictedToMinimumLevel": "Information",
          "retainedFileCountLimit": "3",
          "shared": true,
          "flushToDiskInterval": "00:00:01"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ]
  },
  "AllowedHosts": "*"
}
